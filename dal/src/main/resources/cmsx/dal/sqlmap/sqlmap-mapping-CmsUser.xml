	<sql id="BASE-SELECT-CONDITION">
		<dynamic prepend="where">
	          <isNotEmpty prepend="and" property="userId">
	              t.USER_ID = #userId#
	          </isNotEmpty>
	          <isNotEmpty prepend="and" property="fullName">
	              t.FULL_NAME like '%' || #fullName# || '%'
	          </isNotEmpty>
	          <isNotEmpty prepend="and" property="status">
	              t.STATUS = #status#
	          </isNotEmpty> 
		</dynamic>
	</sql>
	<sql id="selectCmsUserSql">
		select ID,  GMT_CREATE, GMT_MODIFIED, USER_ID, PASSWORD, FULL_NAME, EMAIL, ROLE_NAME, DEP_ID, PROFILE_SITE, STATUS
	</sql>

	<select id="findCmsUserCountByWhere" parameterClass="aclResource" resultClass="java.lang.Integer">
	    <![CDATA[
			select count(*) from CMS_USER t
		]]>
		<include refid="BASE-SELECT-CONDITION"/>
	</select>
	
	<select id="findCmsUserPageByWhere" parameterClass="java.util.Map" resultMap="CmsUser-result">
	    <![CDATA[
	         select * from (select a.*, rownum num from (
	    ]]>     
	    <include refid="selectCmsUserSql"/>
	    <include refid="BASE-SELECT-CONDITION"/>
		<![CDATA[
		        order by t.user_id desc
		     ) a where rownum <= #end# ) where num >= #start#
		]]> 
	</select>
	
	<select id="findCmsUserByWhere" parameterClass="aclResource" resultMap="CmsUser-result">
	    <include refid="selectCmsUserSql"/>
	    <include refid="BASE-SELECT-CONDITION"/>
		<![CDATA[
			order by t.user_id desc
		]]>
	</select>
</sqlMap>
