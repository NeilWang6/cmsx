$page.setTitle("编辑用户信息")
<form method="post" id="info_post" method="post">
<div class="bk8"></div> 
<div class="pad_10">
<div style='overflow-y:auto;overflow-x:hidden' class='scrolltable'>
<table width="100%" cellspacing="0" class="table_form contentWrap">
<tr>
  <th width="80"> </th>
  <td><strong> 编辑用户信息 </strong></td>
</tr>
<tr>
   <th width="80"><font color="red">*</font>真实姓名</th>
   <td><input type="text"  name="realname" id="realname" class="input-text" ></td>
</tr> 
<tr>
   <th width="80"><font color="red">*</font>用户名</th>
   <td><input type="text"  name="userid" id="userid" class="input-text" ></td>
</tr> 
<tr>
   <th width="80"><font color="red">*</font>密码</th>
   <td><input type="password"  name="password" id="用户名" class="input-text" ></td>
</tr> 
<tr>
   <th width="80"><font color="red">*</font>重复密码</th>
   <td><input type="password"  name="pwdconfirm" id="pwdconfirm" class="input-text" ></td>
</tr> 
